<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblCalMaui.MainPage"
             Title="Biblical Calendar">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="15">
            
            <Label
                Text="Biblical Calendar Calculator"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Calculate Biblical calendar dates using the Core library"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Frame BorderColor="Gray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Enter Year:" FontAttributes="Bold" />
                    <Entry x:Name="YearEntry" 
                           Placeholder="Enter year (e.g., 2024 or -4004 for BCE)"
                           Keyboard="Numeric" />
                    
                    <Button
                        x:Name="CalculateBtn"
                        Text="Calculate"
                        Clicked="OnCalculateClicked"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Results:" FontAttributes="Bold" />
                    <Border StrokeThickness="1" Stroke="LightGray" Padding="5">
                        <ScrollView HeightRequest="300" Orientation="Vertical">
                            <Label x:Name="ResultsLabel" 
                                   Text="Results will appear here..."
                                   TextColor="Black"
                                   FontSize="14"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"
                                   MaximumWidthRequest="1000" />
                        </ScrollView>
                    </Border>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
