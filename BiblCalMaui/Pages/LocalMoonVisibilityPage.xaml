<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblCalMaui.Pages.LocalMoonVisibilityPage"
             Title="Local Moon Visibility">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">

            <Label Text="Local Moon Visibility"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"/>

            <Label Text="Calculate visible new moons for your location"
                   Style="{StaticResource SubHeadline}"
                   SemanticProperties.HeadingLevel="Level2"/>

            <!-- Location Selection -->
            <Frame BorderColor="Gray"
                   Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Location:"
                           FontAttributes="Bold"/>
                    <Picker x:Name="LocationPicker"
                            Title="Select a location or enter manually"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedIndexChanged="OnLocationSelected"/>

                    <Label Text="Or enter coordinates manually:"
                           FontAttributes="Bold"
                           Margin="0,10,0,0"/>

                    <!-- Latitude Input -->
                    <Grid ColumnDefinitions="*,*,*,*"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="5"
                          RowSpacing="5">
                        <Label Text="Latitude:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalOptions="Center"/>
                        <Entry x:Name="LatDegEntry"
                               Placeholder="Deg"
                               Keyboard="Numeric"
                               Grid.Row="1"
                               Grid.Column="0"
                               WidthRequest="60"/>
                        <Label Text="°"
                               Grid.Row="1"
                               Grid.Column="0"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"/>
                        <Entry x:Name="LatMinEntry"
                               Placeholder="Min"
                               Keyboard="Numeric"
                               Grid.Row="1"
                               Grid.Column="1"
                               WidthRequest="60"/>
                        <Label Text="'"
                               Grid.Row="1"
                               Grid.Column="1"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"/>
                        <Picker x:Name="LatDirPicker"
                                Grid.Row="1"
                                Grid.Column="2"
                                WidthRequest="80">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>N</x:String>
                                    <x:String>S</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                        <Label x:Name="LatDirLabel"
                               Text="N"
                               Grid.Row="1"
                               Grid.Column="2"
                               IsVisible="False"/>
                    </Grid>

                    <!-- Longitude Input -->
                    <Grid ColumnDefinitions="*,*,*,*"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="5"
                          RowSpacing="5">
                        <Label Text="Longitude:"
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalOptions="Center"/>
                        <Entry x:Name="LongDegEntry"
                               Placeholder="Deg"
                               Keyboard="Numeric"
                               Grid.Row="1"
                               Grid.Column="0"
                               WidthRequest="60"/>
                        <Label Text="°"
                               Grid.Row="1"
                               Grid.Column="0"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"/>
                        <Entry x:Name="LongMinEntry"
                               Placeholder="Min"
                               Keyboard="Numeric"
                               Grid.Row="1"
                               Grid.Column="1"
                               WidthRequest="60"/>
                        <Label Text="'"
                               Grid.Row="1"
                               Grid.Column="1"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"/>
                        <Picker x:Name="LongDirPicker"
                                Grid.Row="1"
                                Grid.Column="2"
                                WidthRequest="80">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>E</x:String>
                                    <x:String>W</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                        <Label x:Name="LongDirLabel"
                               Text="E"
                               Grid.Row="1"
                               Grid.Column="2"
                               IsVisible="False"/>
                    </Grid>

                    <!-- GMT Offset -->
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="10">
                        <Label Text="GMT Offset:"
                               VerticalOptions="Center"/>
                        <Entry x:Name="GMTOffsetEntry"
                               Placeholder="e.g., 2, -5, 8"
                               Keyboard="Numeric"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Year Input -->
            <Frame BorderColor="Gray"
                   Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Year:"
                           FontAttributes="Bold"/>
                    <Entry x:Name="YearEntry"
                           Placeholder="Enter year (e.g., 2024 or -4004 for BCE)"
                           Keyboard="Numeric"/>
                    <Button Text="Calculate Local Moons"
                            Clicked="OnCalculateClicked"
                            HorizontalOptions="Fill"
                            ImageSource="local_moon.png"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Results -->
            <Frame BorderColor="Gray"
                   Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Results:"
                           FontAttributes="Bold"/>
                    <Border StrokeThickness="1"
                            Stroke="LightGray"
                            Padding="5">
                        <ScrollView HeightRequest="400"
                                    Orientation="Vertical">
                            <Label x:Name="ResultsLabel"
                                   Text="Results will appear here..."
                                   TextColor="Black"
                                   FontSize="12"
                                   FontFamily="Courier"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"/>
                        </ScrollView>
                    </Border>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

