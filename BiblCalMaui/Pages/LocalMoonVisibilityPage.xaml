<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblCalMaui.Pages.LocalMoonVisibilityPage"
             Title="Local Moon Visibility">

       <!--Give all Entry and Picker background white-->
       <ContentPage.Resources>
              <ResourceDictionary>
                     <Style TargetType="Entry">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="Picker">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
              </ResourceDictionary>
       </ContentPage.Resources>

       <Grid Padding="10" BackgroundColor="#00ffff">
              <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <!-- Year Input and Calculate Button, and Location on Same Row -->
              <Grid Grid.Row="0" RowDefinitions="auto" ColumnDefinitions="auto,auto,*" ColumnSpacing="5" RowSpacing="10">
                     <Entry x:Name="YearEntry"
                            Grid.Row="0"
                            Grid.Column="0"
                            Placeholder="Year"
                            Keyboard="Numeric"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                     <ImageButton x:Name="CalculateButton"
                                  Source="local_moon.png"
                                  Clicked="OnCalculateClicked"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  WidthRequest="40"
                                  HeightRequest="40"
                                  BackgroundColor="Transparent"/>
                     <Grid Grid.Row="0" Grid.Column="2" RowDefinitions="Auto,Auto">
                            <Entry x:Name="LocationEntry"
                                   Grid.Row="0"
                                   Placeholder="Select or enter location name"
                                   Completed="OnLocationEntryCompleted"
                                   TextChanged="OnLocationEntryTextChanged"
                                   Focused="OnLocationEntryFocused"
                                   Unfocused="OnLocationEntryUnfocused"/>
                            <Label Text="To edit, add or delete a location (Press ENTER after the location name)"
                                   Grid.Row="1"
                                   FontSize="10"
                                   TextColor="Gray"
                                   Margin="5,2,0,0"/>
                     </Grid>
              </Grid>
              
              <!-- Overlay Dropdown - positioned absolutely to overlay other controls -->
              <Border x:Name="LocationDropdown"
                      Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="2"
                      StrokeThickness="1"
                      Stroke="Gray"
                      BackgroundColor="White"
                      IsVisible="False"
                      MaximumHeightRequest="200"
                      ZIndex="1000"
                      HorizontalOptions="Start"
                      VerticalOptions="Start"
                      Margin="120,40,0,0">
                     <CollectionView x:Name="LocationDropdownList"
                                     SelectionMode="Single"
                                     SelectionChanged="OnLocationDropdownItemSelected"
                                     BackgroundColor="White">
                            <CollectionView.ItemTemplate>
                                   <DataTemplate>
                                          <Grid Padding="10,5">
                                                 <Label Text="{Binding Name}"
                                                        FontSize="14"
                                                        TextColor="Black"
                                                        VerticalOptions="Center"/>
                                          </Grid>
                                   </DataTemplate>
                            </CollectionView.ItemTemplate>
                     </CollectionView>
              </Border>

              <!-- Latitude Inputs -->
              <Grid Grid.Row="1" ColumnDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto"
                    ColumnSpacing="5"
                    RowDefinitions="Auto,Auto"
                    Margin="0,15,0,0">
                     <!-- Latitude -->
                     <Entry x:Name="LatDegEntry"
                            Placeholder="Deg"
                            Keyboard="Numeric"
                            Grid.Column="0"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                     <Entry x:Name="LatMinEntry"
                            Placeholder="Min"
                            Keyboard="Numeric"
                            Grid.Column="1"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                     <Picker x:Name="LatDirPicker"
                             Grid.Column="2"
                             VerticalOptions="Center">
                            <Picker.ItemsSource>
                                   <x:Array Type="{x:Type x:String}">
                                          <x:String>N</x:String>
                                          <x:String>S</x:String>
                                   </x:Array>
                            </Picker.ItemsSource>
                     </Picker>
                     <!-- Spacing -->
                     <BoxView Grid.Column="3"
                              BackgroundColor="Transparent"
                              WidthRequest="10"/>
                     <!-- Longitude -->
                     <Entry x:Name="LongDegEntry"
                            Placeholder="Deg"
                            Keyboard="Numeric"
                            Grid.Column="4"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                     <Entry x:Name="LongMinEntry"
                            Placeholder="Min"
                            Keyboard="Numeric"
                            Grid.Column="5"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                     <Picker x:Name="LongDirPicker"
                             Grid.Column="6"
                             VerticalOptions="Center">
                            <Picker.ItemsSource>
                                   <x:Array Type="{x:Type x:String}">
                                          <x:String>E</x:String>
                                          <x:String>W</x:String>
                                   </x:Array>
                            </Picker.ItemsSource>
                     </Picker>
                     <!-- Spacing -->
                     <BoxView Grid.Column="7"
                              BackgroundColor="Transparent"
                              WidthRequest="10"/>
                     <!-- GMT Offset -->
                     <Entry x:Name="GMTOffsetEntry"
                            Grid.Column="8"
                            Placeholder="2"
                            Keyboard="Numeric"
                            Grid.Row="0"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                     <!-- Labels -->
                     <Label Text="Latitude"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            VerticalOptions="Center"/>
                     <Label Text="Longitude"
                            Grid.Row="1"
                            Grid.Column="4"
                            Grid.ColumnSpan="3"
                            VerticalOptions="Center"/>
                     <Label Text="UTC/GMT"
                            Grid.Row="1"
                            Grid.Column="8"
                            VerticalOptions="Center"/>
              </Grid>

              <!-- Results -->
              <Border Grid.Row="2"
                      StrokeThickness="3"
                      Stroke="LightGray"
                      BackgroundColor="White"
                      Padding="5"
                      Margin="0,15,0,0">
                     <ScrollView HeightRequest="700"
                                 Orientation="Vertical">
                            <Label x:Name="ResultsLabel"
                                   Text="Results will appear here..."
                                   TextColor="Black"
                                   FontSize="14"
                                   FontFamily="Courier"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"/>
                     </ScrollView>
              </Border>

       </Grid>

</ContentPage>

